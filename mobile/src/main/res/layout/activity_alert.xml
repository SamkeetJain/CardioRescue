<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elementrix.cardiorescue.UI.Alert">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="Someone nearby is having a heart attack!! Pls help him "
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/alert"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:text="Yes, get me there"
        android:onClick="GoToNavigation"
        android:textColor="@color/colorAccent"
        android:background="@drawable/border"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:layout_height="wrap_content" />

</RelativeLayout>
